#!/bin/bash

if [ $# -eq 0 ]; then
    echo "Usage: fileinfo <file>..."
    exit 1
fi

for file in "$@"; do
    if [ ! -e "$file" ]; then
        echo "Error: '$file' not found"
        continue
    fi

    size=$(du -sh "$file" 2>/dev/null | cut -f1)
    type=$(file -b "$file")
    perms=$(stat -c '%A' "$file")
    owner=$(stat -c '%U:%G' "$file")
    modified=$(stat -c '%y' "$file" | cut -d. -f1)
    created=$(stat -c '%w' "$file" | cut -d. -f1)
    [ "$created" = "-" ] && created="N/A"

    echo "File:     $file"
    echo "Size:     $size"
    echo "Perms:    $perms"
    echo "Owner:    $owner"
    echo "Created:  $created"
    echo "Modified: $modified"
    echo "Type:     $type"
    [ $# -gt 1 ] && echo "---"
done
